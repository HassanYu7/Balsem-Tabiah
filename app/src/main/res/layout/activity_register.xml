<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cadfde"
    android:layout_gravity="center">



    <ImageView
        android:id="@+id/wave_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/wavepatient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/mo_re"
        android:foregroundGravity="bottom"
        android:gravity="bottom|center"
        android:text="REGISTER"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:id="@+id/text_field_first_name_patient"
        android:layout_width="378dp"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:boxBackgroundColor="#9AC6C5"
        app:boxStrokeColor="#0F8B87"
        app:hintTextColor="#0F8B87"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_first_name_patient"
            android:layout_width="378dp"
            android:layout_height="60dp"
            android:hint="First Name"
            android:padding="20dp"
            android:textColor="#3B4545"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_middle_name_patient"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="378dp"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:boxBackgroundColor="#9AC6C5"
        app:boxStrokeColor="#0F8B87"
        app:hintTextColor="#0F8B87"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_middle_name_patient"
            android:layout_width="378dp"
            android:layout_height="60dp"
            android:hint="Middle Name"
            android:inputType="textPersonName"
            android:textColor="#3B4545"
            android:padding="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_last_name_patient"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="378dp"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:boxBackgroundColor="#9AC6C5"
        app:boxStrokeColor="#0F8B87"
        app:hintTextColor="#0F8B87"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_last_name_patient"
            android:layout_width="378dp"
            android:layout_height="60dp"
            android:textColor="#3B4545"

            android:hint="Last Name"
            android:inputType="textPersonName"
            android:padding="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_id_number_patient"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="378dp"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:boxBackgroundColor="#9AC6C5"
        app:boxStrokeColor="#0F8B87"
        app:hintTextColor="#0F8B87"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:counterMaxLength="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_id_number_patient"
            android:layout_width="378dp"
            android:layout_height="60dp"
            android:hint="ID Number"
            android:maxLength="10"
            android:textColor="#3B4545"
            android:inputType="number"
            android:padding="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_phone_number_patient"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="378dp"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:boxBackgroundColor="#9AC6C5"
        app:boxStrokeColor="#0F8B87"
        app:hintTextColor="#0F8B87"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:prefixText="+966"
        app:counterMaxLength="9"

        app:layout_constraintTop_toTopOf="parent">

        <!--
         -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_phone_number_patient"
            android:layout_width="378dp"
            android:layout_height="60dp"
            android:hint="Phone Number"
            android:maxLength="9"
            android:inputType="number"
            android:padding="20dp"
            android:textColor="#3B4545"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_Address_patient"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="378dp"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:boxBackgroundColor="#9AC6C5"
        app:boxStrokeColor="#0F8B87"
        app:hintTextColor="#0F8B87"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_address_patient"
            android:layout_width="378dp"
            android:layout_height="60dp"
            android:hint="Address"
            android:inputType="text"
            android:padding="20dp" />
    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_date_birth_patient"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="378dp"
        android:layout_height="60dp"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="495dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        app:boxBackgroundColor="#9AC6C5"
        app:boxStrokeColor="#0F8B87"
        app:hintTextColor="#0F8B87"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_date_birth_patient"
            android:layout_width="378dp"
            android:layout_height="60dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Date Birth"
            android:inputType="none"
            android:padding="20dp"

            android:textColor="#3B4545" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/typeOfClinic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Gender: "
        android:textColor="#374343"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_field_date_birth_patient" />

    <RadioGroup
        android:id="@+id/radio_group_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/text_field_date_birth_patient">

        <RadioButton
            android:id="@+id/radio_male_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:buttonTint="#0F8B87"
            android:text="Male"
            android:textColor="#374343"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radio_female_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="70dp"

            android:buttonTint="#0F8B87"
            android:text="Female"

            android:textColor="#374343"
            android:textSize="12sp" />
    </RadioGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_register_patient"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:onClick="button_register_patient"
        android:text="Register"
        app:backgroundTint="#0F8B87"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/button_already_have_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_already_have_account"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/btn_link_to_login"
        android:textAllCaps="false"
        android:textColor="#374343"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/wave_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent" />

